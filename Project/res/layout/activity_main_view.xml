<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.jasperb.citybuilder.view.CityView
        android:id="@+id/City"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/MainTools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/TerrainButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:src="@drawable/grass" />

        <ImageView
            android:id="@+id/ObjectsButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:src="@drawable/objects_unpressed" />

        <ImageView
            android:id="@+id/GridButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:src="@drawable/grid_button" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TerrainTools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/EyedropperButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:src="@drawable/eyedropper_unpressed" />

        <ImageView
            android:id="@+id/SelectTerrainButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:src="@drawable/select_unpressed" />

        <ImageView
            android:id="@+id/PaintButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:src="@drawable/pencil_unpressed" />

        <FrameLayout
            android:id="@+id/TileStyleButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/blank_unpressed" />

            <ImageView
                android:id="@+id/TileStyleIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/BlendButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:src="@drawable/blend_button" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ObjectTools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:visibility="visible" >
        
        <ImageView
            android:id="@+id/BuildingsButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:src="@drawable/buildings_unpressed" />
        
        <ImageView
            android:id="@+id/SelectObjectButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:src="@drawable/click_unpressed" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/BrushTools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/Brush1x1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:src="@drawable/brush1x1" />

        <ImageView
            android:id="@+id/Brush3x3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:src="@drawable/brush3x3" />

        <ImageView
            android:id="@+id/Brush5x5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:src="@drawable/brush5x5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/GeneralTools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/AcceptButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:src="@drawable/accept_unpressed" />

        <ImageView
            android:id="@+id/CancelButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:src="@drawable/cancel_unpressed" />

        <ImageView
            android:id="@+id/UndoButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:src="@drawable/undo_unpressed" />

        <ImageView
            android:id="@+id/RedoButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:src="@drawable/redo_unpressed" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/MoveButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/LeftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:src="@drawable/leftmove" />

        <ImageView
            android:id="@+id/UpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:src="@drawable/upmove" />

        <ImageView
            android:id="@+id/DownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:src="@drawable/downmove" />

        <ImageView
            android:id="@+id/RightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:src="@drawable/rightmove" />
    </RelativeLayout>

</merge>